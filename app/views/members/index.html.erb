<h1><%= t('listing_members') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('home_phone') %></th>
      <th><%= t('mobile_phone') %></th>
      <th><%= t('work_phone') %></th>
      <th><%= t('email') %></th>
      <th><%= t('church') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.home_phone %></td>
        <td><%= member.mobile_phone %></td>
        <td><%= member.work_phone %></td>
        <td><%= member.email %></td>
        <td><%= member.church %></td>
        <td><%= link_to t('show'), member %></td>
        <td><%= link_to t('edit'), edit_member_path(member) %></td>
        <td><%= link_to t('destroy'), member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_member'), new_member_path, :class=>"btn btn-primary" %>
