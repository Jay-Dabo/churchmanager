<%= simple_form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :birth_date %><br>
    <%= f.date_select :birth_date,{:start_year => Time.now.year - 100} %>
  </div>
  <div class="form-group">
    <%= f.label :sex %><br>
    <%= f.select :sex, {t('sex.female') => 0, t('sex.male') => 1 },{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :neighborhood %><br>
    <%= f.text_field :neighborhood, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.text_field :state, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :country %><br/>
    <%= f.country_select :country,{priority_countries: ["BR"], prompt: :select_country},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :zip_code %><br>
    <%= f.text_field :zip_code, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :home_phone %><br>
    <%= f.phone_field :home_phone, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :mobile_phone %><br>
    <%= f.phone_field :mobile_phone, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :work_phone %><br>
    <%= f.phone_field :work_phone, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :blood_type %><br>
    <%= f.select :blood_type, ['A+','A-','AB+','AB-','B+','B-','O+','O-'],{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :marital_status %><br>
    <%= f.select :marital_status, {t('marital_status.single') => 0, t('marital_status.maried') => 1, t('marital_status.widowed') =>2 },{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :congregating %><br>
    <%= f.select :congregating, {t('yes') => 1, t('no') => 0},{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>
  <div class="form-group">
    <%= f.label :withdrawl_date %><br>
    <%= f.date_select :withdrawl_date, {:start_year => Time.now.year - 100} %>
  </div>
  <div class="form-group">
    <%= f.label :departament_id %><br>
    <%= f.select :departament_id, @departaments.collect { |c| [c.name,c.id] },{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :skills %><br>
    <%= f.text_field :skills, :placeholder =>  t('skills_examples'),:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :worship_date %><br>
    <%= f.date_select :worship_date %>
  </div>
  <div class="form-group">
    <%= f.label :situation %><br>
    <%= f.select :situation,{t('situation.new_decided') => 0, t('situation.reconciliation') => 1,t('situation.visiting') => 2, t('situation.acclaim') => 3 },{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :profession %><br>
    <%= f.text_field :profession,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :education %><br>
    <%= f.text_field :education,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :baptism_date %><br>
    <%= f.date_select :baptism_date %>
  </div>
  <div class="form-group">
    <%= f.label :wedding_date %><br>
    <%= f.date_select :wedding_date %>
  </div>
  <div class="form-group">
    <%= f.label :ministerial_role_id %><br>
    <%= f.select :ministerial_role_id, @ministerial_roles.collect { |mr| [mr.name,mr.id] }, {}, {:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :twitter %><br>
    <%= f.text_field :twitter,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :instagram %><br>
    <%= f.text_field :instagram,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :whatsapp %><br>
    <%= f.text_field :whatsapp,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :church_id %><br>
    <%= f.select :church_id, @churchs.collect { |c| [c.name,c.id] },{},{:class=>"form-control"} %>
  </div>
  <h3><%= t('contacts') %></h3>
  <div id="member_contacts">
    <%= f.simple_fields_for :member_contacts do |contact| %>
      <%= render "member_contact_fields", :f => contact %>
    <% end %>
  </div>
  <div class="actions">
    <%= link_to_add_association 'add contact', f, :member_contacts, :class => 'btn btn-default'  %>
    <br/>
    <%= f.button :submit %>
  </div>
<% end %>
